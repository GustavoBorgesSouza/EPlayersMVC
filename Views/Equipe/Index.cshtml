@model Equipe
@{
    ViewData["Title"] = "Equipes";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data"> 
    <label>ID</label>
    <input type="text" name="IdEquipe">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive"> 
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/Img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="60px" height="50px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"> <i class="far fa-trash-alt"></i> </a></td>
            </tr>
        }
    </tbody>
</table>