@model Equipe
@{
    ViewData["Title"] = "Equipes";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
    integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/cadastrot.css">

<div>
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<section class="container_banner">
    <h1>Cadastro de times</h1>
</section>

<section class="content content_container">
    <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
        <div class="cadastro_container">
            <div class="preencher">
                <label>ID</label>
                <input type="text" name="IdEquipe">
            </div>

            <div class="preencher">
                <label>Nome</label>
                <input class="escolher_nome" type="text" name="Nome">
            </div>

            <div class="preencher">
                <label>Imagem</label>
                <input class="escolher_img" type="file" name="Imagem">
            </div>

            <button type="submit">Cadastrar</button>
        </div>

    </form>

    <div>
        <a class="navbar-brand" asp-area="" asp-controller="Jogador" asp-action="Index">Cadastrar Jogadores</a>
    </div>

    <table class="table table-striped table-responsive">
        <thead>
            <th>ID</th>
            <th>Nome</th>
            <th>Imagem</th>
        </thead>
        <tbody>
            @foreach (Equipe equipe in ViewBag.Equipes)
            {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td><img src="/Img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="60px"
                        height="50px">
                    </td>
                    <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"> <i
                            class="far fa-trash-alt"></i> </a></td>
                </tr>
            }
        </tbody>
    </table>

</section>