@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID do Jogador</label>
    <input type="text" name="IdJogador">

    @* <input type="text" name="IdEquipe"> *@
    <label>Equipe</label>
    <select id="IdEquipe" name="IdEquipe">
        <option value="0" selected disabled>Selecione</option>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <option value="@equipe.IdEquipe">@equipe.Nome</option>
        }
    </select>

    <label>Nome Jogador</label>
    <input type="text" name="Nome">

    <label>Email</label>
    <input type="email" name="Email">

    <label>Senha</label>
    <input type="password" name="Senha">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>IdJogador</th>
        <th>IdEquipe</th>
        <th>Nome</th>
    </thead>
    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogadores)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.IdEquipe</td>
                <td>@jogador.Nome</td>
                <td> <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador" > <i class="far fa-trash-alt"></i> </a> </td>
            </tr>
        }
    </tbody>

</table>