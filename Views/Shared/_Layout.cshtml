<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EplayersMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/estilo_home.css" />

</head>

<body>

    <header>
        <div class="container container_header">
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/assets_/logo.svg" alt="logo"></a>
            <nav class="menu_header">
                <a asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                <a href="#horarios">Horários</a>
                <a href="#">Campeonato</a>
                <a href="#">Resultados</a>
                <a href="#container_noticias">Notícias</a>

                @if (ViewBag.UserName != null)
                {
                    <div class="NomeLogout">
                    <a style="color: turquoise;">Olá, @ViewBag.UserName</a>
                    <a asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                    </div>
                }
                else
                {
                    <a asp-area="" asp-controller="Login" asp-action="Logar">Login</a>
                }
            </nav>
        </div>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container container_footer">
            <nav class="links">
                <h3>Links úteis</h3>
                <a href="#">-Regras de utilização</a>
                <a href="#">-Suporte</a>
                <a href="#">-Central de ajuda</a>
                <a href="#">-Contato</a>
            </nav>

            <nav class="paginas">
                <h3>Páginas</h3>
                <a href="#container_banner">-Início</a>
                <a href="#">-Campeonatos</a>
                <a href="#">-Resultados</a>
                <a href="#container_noticias">-Notícias</a>
                <a href="#">-Login/cadastro</a>
            </nav>

            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/assets_/logo.svg"
                    alt="logo E-players"></a>

            <div class="contato">
                <p>Faça parte do nosso clan, assine nossa nesletter!</p>
                <form action="post">
                    <input type="email" id="email" name="email">
                    <input type="submit" class="botao">
                </form>
                <div class="seguir">
                    <span>Siga-nos em:</span>
                    <a href="https://www.instagram.com/senai_info/"><img src="~/assets_/instagram.png" alt="">
                    </a>
                    <a href="https://www.facebook.com/senaiinformatica"><img src="~/assets_/facebook.png" alt=""></a>
                    <a href="https://www.youtube.com/playlist?list=PLQc2LfH6uOhLcY9jQchAdVLGtW_8WF_Nz"><img
                            src="~/assets_/youtube.png" alt=""></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
